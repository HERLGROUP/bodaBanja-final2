doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Document
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css', integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh', crossorigin='anonymous')
    style.
      * {
      width: 1200px;
      margin: 0 auto;
      }
  body
   h3 Customer list
   table
      thead
      tr
       th surname
       th given name
       th gender
       th date of birth
       th action
       
      tbody
       each customer in x
        tr
         td #{customer.surname}
         td #{customer.givenName}
         td #{customer.gender}
         td #{customer.dob}
         td
            a(href=`/customer/${customer._id}`) view
         
            
               
               
